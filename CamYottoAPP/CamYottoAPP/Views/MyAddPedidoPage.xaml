<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CamYottoAPP.Views.MyAddPedidoPage"
             BackgroundImageSource="appwall">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Agregar Pedido"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   FontSize="40"
                   Padding="50,100,50,100"
                   TextColor="Brown"/>

                <StackLayout Padding="20,0,20,300">
                    <Entry x:Name="TxtCliente" Placeholder="Cliente" FontSize="Large" TextColor="Brown" />
                    <Entry x:Name="TxtProducto" Placeholder="Producto" FontSize="Large" TextColor="Brown" />
                    <Entry x:Name="TxtSubTotal" Placeholder="SubTotal" FontSize="Large" TextColor="Brown" Keyboard="Numeric"/>
                    <Entry x:Name="TxtTotal" Placeholder="Total" FontSize="Large" TextColor="Brown" Keyboard="Numeric"/>

                    <StackLayout Padding="50,50,50,50">
                        <Button x:Name="BtnAddPedido" Text="Agregar" HeightRequest="70" BackgroundColor="#CBAF96" Opacity="0.7"/>
                    </StackLayout>
                    
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

